<resources>
    <!-- Base application theme. -->
    <style name="Theme.SuitmediaAndroidDeveloperTest" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button" />

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_rectangle_orange</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_rectangle_orange</item>
    </style>

    <style name="EditText"/>

    <style name="EditText.RobotoNormal14sp">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_grey_suitmedia</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>